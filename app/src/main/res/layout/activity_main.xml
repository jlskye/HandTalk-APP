<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--补足屏幕顶端-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="#ff52a6d8"
        android:id="@+id/textView"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#ff52a6d8" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dip"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:background="@drawable/leftedittext" >
        </TextView>

        <EditText
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_gravity="left"
            android:layout_weight="14.5"
            android:background="#ffffffff"
            android:editable="true"
            android:ellipsize="end"
            android:gravity="center|left"
            android:hint="请输入要翻译的词语或句子..."
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip" />

        <Button
            android:id="@+id/btn_translate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip"
            android:layout_weight="2.5"
            android:text="翻译"
            android:textColor="#ff878787"
            android:textSize="15dip"
            android:gravity="center|right"
            android:background="#ffffca6a">
        </Button>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dip"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:background="@drawable/rightedittext" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:orientation="horizontal" >

        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
        <TextView
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:id="@+id/arrow7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff868686"
            android:textSize="30px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#00000000"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mon"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tue"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wed"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thu"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Fri"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sta"
            android:textColor="#ff868686"
            android:textSize="40px"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sun"
            android:textColor="#ff868686"
            android:textSize="40px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="————手语1+1————"
            android:textColor="#ffacacac"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:layout_weight="1"
                android:id="@+id/blackboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:adjustViewBounds="true"
                android:src="@drawable/blackboard"/>

            <Button
                android:layout_weight="1"
                android:id="@+id/zjlianxi"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_start"
                android:text="   开启学习之旅   "
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="#ffffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ff878787"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:layout_marginTop="5dip"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/myCollection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/btn_collection"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/mistake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/btn_mistake"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/kaoshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/btn_exam"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:layout_marginBottom="5dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="生词本"
                android:textColor="#ff868686"
                android:textSize="12dip"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="错题本"
                android:textSize="12dip"
                android:textColor="#ff868686" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="测验"
                android:textSize="12dip"
                android:textColor="#ff868686"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>