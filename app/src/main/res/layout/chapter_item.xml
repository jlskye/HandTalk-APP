<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/qi_quizImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:maxHeight="@dimen/activity_quiz_catalog"
            android:maxWidth="@dimen/activity_quiz_catalog"
            android:adjustViewBounds="true"
            android:src="@drawable/select_g"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/quiz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:textSize="20dp"
                android:text="@string/quiz_title_01"/>
            <TextView
                android:id="@+id/quiz_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quiz_describe_01"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ffacacca"/>
</LinearLayout>








